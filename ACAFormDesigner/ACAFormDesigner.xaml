<UserControl x:Class="Accela.ACA.FormDesigner.ACAFormDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:acc="clr-namespace:Accela.Controls.FormDesigner;assembly=Accela.Controls.FormDesigner"
    xmlns:local="clr-namespace:Accela.ACA.FormDesigner"
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
    <Grid x:Name="LayoutRoot" >
        <acc:VisualDesigner x:Name="formDesigner" Width="Auto" Height="Auto" />
        <local:MessagePanel x:Name="messagePanel" Background="Aqua" Width="Auto" Height="Auto" Visibility="Collapsed" />
    </Grid>
</UserControl>
